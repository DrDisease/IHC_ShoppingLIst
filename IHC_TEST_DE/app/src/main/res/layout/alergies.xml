<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="411dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/banner"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="619dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <CheckBox
                android:text="Lactose"
                android:layout_width="363dp"
                android:layout_height="58dp"
                tools:layout_editor_absoluteY="249dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checLactose"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

        <CheckBox
                android:text="Eggs"
                android:layout_width="362dp"
                android:layout_height="56dp"
                tools:layout_editor_absoluteY="193dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checEggs"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

        <CheckBox
                android:text="Peanuts"
                android:layout_width="362dp"
                android:layout_height="56dp"
                tools:layout_editor_absoluteY="537dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checkPeanuts"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

        <CheckBox
                android:text="Tree Nuts"
                android:layout_width="362dp"
                android:layout_height="56dp"
                tools:layout_editor_absoluteY="486dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checkTreeNuts"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

        <CheckBox
                android:text="Soy"
                android:layout_width="362dp"
                android:layout_height="56dp"
                tools:layout_editor_absoluteY="443dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checkSoy"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

        <CheckBox
                android:text="Wheat"
                android:layout_width="362dp"
                android:layout_height="56dp"
                tools:layout_editor_absoluteY="400dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checkWheat"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

        <CheckBox
                android:text="Fish"
                android:layout_width="362dp"
                android:layout_height="56dp"
                tools:layout_editor_absoluteY="357dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checkFish"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

        <CheckBox
                android:text="Shell Fish"
                android:layout_width="362dp"
                android:layout_height="56dp"
                tools:layout_editor_absoluteY="307dp"
                tools:layout_editor_absoluteX="15dp"
                android:id="@+id/checkShellfish"
                android:button="@null"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>